{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteName": {
      "type": "string"
    },
    "hostingPlanName": {
      "type": "string"
    },
    "siteLocation": {
      "type": "string",
      "defaultValue": "South Central US"
    },
    "sku": {
      "type": "string",
      "allowedValues": ["F1", "D1", "B1", "B2", "B3", "S1", "S2", "S3", "P1", "P2", "P3", "P4"],
      "defaultValue": "F1"
    },
    "mongoDbUrl": {
      "type": "string",
      "metadata": {
        "description": "mongoDB URL (e.g. mongodb://user:pass@mongo.example.com/kauntah)"
      }
    },
    "repoUrl": {
      "type": "string"
    },
    "branch": {
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2015-08-01",
      "name": "[parameters('hostingPlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[parameters('siteLocation')]",
      "sku": {
        "name": "[parameters('sku')]"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[parameters('siteName')]",
      "type": "Microsoft.Web/sites",
      "location": "[parameters('siteLocation')]",
      "dependsOn": ["[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]"],
      "properties": {
        "serverFarmId": "[parameters('hostingPlanName')]"
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "type": "config",
          "name": "web",
          "dependsOn": ["[concat('Microsoft.Web/Sites/', parameters('siteName'))]"],
          "properties": {
            "phpVersion": "",
            "webSocketsEnabled": true
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "appsettings",
          "type": "config",
          "dependsOn": ["[resourceId('Microsoft.Web/Sites', parameters('siteName'))]"],
          "properties": {
            "WEBSITE_NODE_DEFAULT_VERSION": "10.13.0",
            "MONGODB_URL": "[parameters('mongoDbUrl')]"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "name": "web",
          "type": "sourcecontrols",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('siteName'))]",
            "[concat('Microsoft.Web/Sites/', parameters('siteName'), '/config/web')]"
          ],
          "properties": {
            "RepoUrl": "[parameters('repoURL')]",
            "branch": "[parameters('branch')]",
            "IsManualIntegration": true
          }
        }
      ]
    }
  ],
  "outputs": {
    "siteUri": {
      "type": "string",
      "value": "[concat('https://',reference(resourceId('Microsoft.Web/sites', parameters('siteName'))).hostNames[0])]"
    }
  }
}
